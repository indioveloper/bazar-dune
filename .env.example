# Puerto del servidor (Railway lo asigna automáticamente en producción)
PORT=8000

# URL base de la API (ajustar según entorno)
# Desarrollo: http://localhost:8000/api
# Producción: https://tu-app.up.railway.app/api
API_BASE_URL=http://localhost:8000/api

# ID de Google Spreadsheet (obtener de la URL del documento)
SPREADSHEET_ID=tu_spreadsheet_id_aqui

# Secreto para firmar tokens JWT (CAMBIAR en producción)
JWT_SECRET=tu_clave_secreta_super_segura_aqui_12345

# Entorno de ejecución
NODE_ENV=development

# Credenciales de Google Cloud Platform (solo en producción)
# En desarrollo, usar el archivo credentials.json
# En Railway, pegar el contenido JSON del archivo como una sola línea
# GCP_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}
